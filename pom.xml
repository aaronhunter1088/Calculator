<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>MicrosoftCalculator</groupId>
  <artifactId>MicrosoftCalculator</artifactId>
  <version>3.0.1</version>
  <name>MicrosoftCalculator</name>
  <dependencies>
    <!-- https://mvnrepository.com/artifact/org.junit.jupiter/junit-jupiter-api -->
	<dependency>
	    <groupId>org.junit.jupiter</groupId>
	    <artifactId>junit-jupiter-api</artifactId>
	    <version>5.3.2</version>
	    <scope>test</scope>
	    <exclusions>
	    	<exclusion>
	    		<groupId>org.apiguardian</groupId>
	    		<artifactId>apiguardian-api</artifactId>
	    	</exclusion>
	    </exclusions>
	</dependency>
	<!-- https://mvnrepository.com/artifact/org.junit.jupiter/junit-jupiter-engine -->
	<!-- https://mvnrepository.com/artifact/org.junit.jupiter/junit-jupiter-params -->
	<dependency>
	    <groupId>org.junit.jupiter</groupId>
	    <artifactId>junit-jupiter-params</artifactId>
	    <version>5.3.2</version>
	    <scope>test</scope>
	    <exclusions>
	    	<exclusion>
	    		<groupId>org.apiguardian</groupId>
	    		<artifactId>apiguardian-api</artifactId>
	    	</exclusion>
	    </exclusions>
	</dependency>
	<dependency>
	    <groupId>org.apache.maven.plugins</groupId>
	    <artifactId>maven-surefire-plugin</artifactId>
	    <version>3.0.0-M2</version>
	    <type>maven-plugin</type>
	</dependency>
	<!-- https://mvnrepository.com/artifact/com.apple/AppleJavaExtensions -->
	<dependency>
	    <groupId>com.apple</groupId>
	    <artifactId>AppleJavaExtensions</artifactId>
	    <version>1.4</version>
	</dependency>
	
  </dependencies>
  <build>
    <resources>
	  <resource>
	    <directory>/Users/michaelball/git/calculator/src/main/java</directory>
	      <includes>
	        <include>**/*.*</include>
	      </includes>
	      <excludes>
	        <exclude>**/*Test.java</exclude>
	      </excludes>
	  </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.0</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
    	<groupId>org.apache.maven.plugins</groupId>
    	<artifactId>maven-jar-plugin</artifactId>
    	<version>3.1.0</version>
    	<configuration>
        <archive>
            <manifest>
                <addClasspath>true</addClasspath>
                <classpathPrefix>libs/</classpathPrefix>
                <mainClass>
                    microsoftcalculator.CalculatorMain
                </mainClass>
            </manifest>
        </archive>
    </configuration>
</plugin>
    </plugins>
  </build>
</project>